<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rohitbarnawal.data.database"
    android:background="@drawable/bi6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME ADMIN"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:typeface="serif" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="55sp"
        android:text="Add new"

        android:id="@+id/create"
        android:background="@drawable/bi"
        android:textSize="30sp"
        android:layout_above="@+id/del"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="55sp"
        android:text="View a/c"

        android:id="@+id/view"
        android:background="@drawable/bi"
        android:textSize="30sp"
        android:layout_below="@+id/del"
        android:layout_alignStart="@+id/del"
        android:layout_marginTop="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="55sp"
        android:id="@+id/del"
        android:onClick="didTapButton"
        android:background="@drawable/bi"
        android:textSize="30sp"
        android:text="Delete a/c"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/create"
        android:layout_marginTop="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="55sp"
        android:text="Update"
        android:id="@+id/update"
        android:onClick="didTapButton"
        android:background="@drawable/bi"
        android:textSize="30sp"
        android:layout_below="@+id/view"
        android:layout_alignStart="@+id/view"
        android:layout_marginTop="20sp" />

</RelativeLayout>
