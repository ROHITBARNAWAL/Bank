<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rohitbarnawal.data.Update"
    android:background="#83fb0a">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A/C ID:"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:layout_marginRight="20sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New A/C Type:"
        android:id="@+id/textView7"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:layout_marginRight="20sp"
        android:layout_below="@+id/editText4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Balance:"
        android:id="@+id/textView9"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:layout_marginRight="20sp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText5"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        android:layout_alignEnd="@+id/editText4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText6"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editText5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="55sp"
        android:text="Update"
        android:id="@+id/button2"
        android:textStyle="bold|italic"
        android:textSize="30sp"
        android:typeface="sans"
        android:background="@android:drawable/progress_indeterminate_horizontal"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/editText6"
        android:layout_toStartOf="@+id/editText4"
        android:textColor="#f9ec32" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="55sp"
        android:text="BACK"
        android:id="@+id/button3"
        android:textStyle="bold|italic"
        android:textSize="30sp"
        android:typeface="sans"
        android:background="@android:drawable/progress_indeterminate_horizontal"
        android:textColor="#f9ec32"
        android:layout_alignTop="@+id/button2"
        android:layout_alignEnd="@+id/editText6"
        android:layout_toEndOf="@+id/textView9" />

</RelativeLayout>
